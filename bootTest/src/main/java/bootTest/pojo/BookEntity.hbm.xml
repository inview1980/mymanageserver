<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="bootTest.pojo.BookEntity" table="book" schema="book">
        <id name="bookid" column="bookid"/>
        <property name="bookName" column="bookName"/>
        <property name="booktypeid" column="booktypeid"/>
        <property name="publishment" column="publishment"/>
        <property name="publishDate" column="publishDate"/>
        <property name="author" column="author"/>
        <property name="price" column="price"/>
        <property name="userCode" column="userCode"/>
        <property name="borrowDate" column="BorrowDate"/>
    </class>
</hibernate-mapping>